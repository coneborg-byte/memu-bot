{
  "agents": {
    "defaults": {
      "model": {
        "primary": "openrouter/openrouter/auto",
        "fallbacks": [
          "ollama-local/llama3.1:8b"
        ]
      },
      "contextTokens": 1000000,
      "memorySearch": {
        "enabled": true
      }
    }
  },
  "models": {
    "providers": {
      "openrouter": {
        "baseUrl": "https://openrouter.ai/api/v1",
        "api": "openai-responses",
        "apiKey": "${OPENROUTER_API_KEY}",
        "models": [
          {
            "id": "openrouter/auto",
            "name": "openrouter/auto",
            "contextWindow": 1000000
          }
        ]
      },
      "ollama-local": {
        "baseUrl": "http://host.docker.internal:11434/v1",
        "api": "ollama",
        "apiKey": "ollama",
        "models": [
          {
            "id": "llama3.1:8b",
            "name": "Llama 3.1 8B",
            "contextWindow": 16384
          }
        ]
      }
    }
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "dmPolicy": "open",
      "botToken": "8342295225:AAHliyXkTONfHYYx7WIwKRfCuSu8rXT343I",
      "allowFrom": [
        "*"
      ],
      "groupPolicy": "allowlist",
      "streamMode": "partial"
    }
  },
  "gateway": {
    "bind": "lan",
    "mode": "local",
    "auth": {
      "mode": "token",
      "token": "morpheus-secure-token-2026"
    },
    "controlUi": {
      "dangerouslyDisableDeviceAuth": true
    }
  },
  "plugins": {
    "entries": {
      "telegram": {
        "enabled": true
      }
    }
  }
}